{% extends "./base.jinja2" %}
{% block header %}
<h1>{% block title %}Listar Presenças{% endblock %}</h1>
{% endblock %}

{% block content %}
<div class="container">
    <h3>Presenças - Aula do dia {{ aula.data_aula.strftime('%d/%m/%Y') }}</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Matrícula</th>
                <th>estudante</th>
                <th>Data/Hora</th>
            </tr>
        </thead>
        <tbody>
          <tr>
            {% for estudante in estudantes %}
                <td> {{ estudante.matricula }}</td>
                <td>{{ estudante.nome }}</td>
                <td>
                    {% for presenca in presencas %}
                        {% if presenca.estudante_id == estudante.id %}
                            {{ presenca.data.strftime('%d/%m/%Y %H:%M') }}
                        {% endif %}
                    {% endfor %}
                </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
