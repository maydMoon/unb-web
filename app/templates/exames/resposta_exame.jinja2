{% extends "./base.jinja2" %}
{% from 'bootstrap5/utils.html' import render_icon %}

{% block header %}
<h1>{% block title %}Exibir Exame{% endblock %}</h1>
{% endblock %}

{% block content %}
<div class="container">
    <h4>{{ exame.nome }}</h4>
    <div>
        <form>
            {% for questao_exame in questoes_exame %}
                <div class="mb-3 card">
                    <div class="card-body">
                        <h5 class="card-title">Quest√£o {{ loop.index }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Valor: {{ questao_exame.nota_questao }}</h6>
                        <p class="card-text">{{ questao_exame.enunciado }}</p>
                    </div>
                    <div class="card-footer">
                        {% if questao_exame.tipo_questao == "multipla_escolha" %}
                            <ul class="list-group">
                                {% for opcao in questao_exame.opcoes %}
                                    <li class="list-group-item">
                                        <input unique-value class="form-check-input me-1" type="radio" id="questao_id_{{ questao_exame.id }}" 
                                            name="questao_id_{{ questao_exame.id }}" value="A">
                                            <label class="form-check-label" for="opcao_a_{{ loop.index }}">{{ opcao.opcao_a }}</label>
                                    </li>
                                    <li class="list-group-item">
                                        <input unique-value class="form-check-input me-1" type="radio" id="questao_id_{{ questao_exame.id }}" 
                                            name="questao_id_{{ questao_exame.id }}" value="B">
                                            <label class="form-check-label" for="opcao_b_{{ loop.index }}">{{ opcao.opcao_b }}</label>
                                    </li>
                                    {% if opcao.opcao_c %}
                                        <li class="list-group-item">
                                            <input unique-value class="form-check-input me-1" type="radio" id="questao_id_{{ questao_exame.id }}"
                                                 name="questao_id_{{ questao_exame.id }}" value="C">
                                                <label class="form-check-label" for="opcao_c_{{ loop.index }}">{{ opcao.opcao_c }}</label>
                                        </li>
                                    {% endif %}
                                    {% if opcao.opcao_d %}
                                        <li class="list-group-item">
                                            <input unique-value class="form-check-input me-1" type="radio" id="questao_id_{{ questao_exame.id }}"
                                                name="questao_id_{{ questao_exame.id }}" value="D">
                                                <label class="form-check-label" for="opcao_d_{{ loop.index }}">{{ opcao.opcao_d }}</label>
                                        </li>
                                    {% endif %}
                            {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                    <div>
                        <h4>Respota Correta:</h4>
                        <p>{{ questao_exame.resposta }}</p>
                        <h4>Respota estudante:</h4>
                        <p>{{ questao_exame.resposta_estudante }}</p>
                        <p>Nota estudante: {{ questao_exame.nota_estudante_questao }}</p>
                    </div>
                </div>
            {% endfor %}
            {% if current_user.tipo_usuario == "professor" %}
                <button type="submit" id="submitBtn" class="btn btn-secondary">Editar Resultado</button>
            {% endif %}
        </form>
    </div>
<body>
<script>
</script>
{% endblock %}